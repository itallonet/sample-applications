<div class="container">
<h1>Articles</h1>

<div class="between">
  <span class="grey">Our blog has <%= Article.public_count %> articles and counting!</span>
  <span class="button success"><%= link_to "+ New Article", new_article_path %></span>
</div>
<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li class="title">
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>

</div>